---
const technologies = [
  { name: "Python 3.14", role: "Runtime", color: "oklch(0.78 0.17 75)" },
  { name: "Playwright", role: "Automation", color: "oklch(0.60 0.19 155)" },
  { name: "FastAPI", role: "Backend", color: "oklch(0.70 0.175 175)" },
  { name: "SQLite", role: "Database", color: "oklch(0.62 0.14 230)" },
  { name: "htmx", role: "Frontend", color: "oklch(0.60 0.19 155)" },
  { name: "Claude CLI", role: "AI Engine", color: "oklch(0.72 0.16 70)" },
];
---

<section id="tech-stack" data-animate class="py-20 bg-surface-50">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <h2 class="font-display text-3xl font-bold text-surface-900">
      Built With
    </h2>
    <p class="mt-3 text-surface-600">
      The tools that power the pipeline
    </p>
    <div class="mt-12 flex flex-wrap justify-center gap-6 stagger-children">
      {technologies.map((tech) => (
        <div
          data-stagger
          class="group flex flex-col items-center gap-3 px-8 py-5 rounded-xl
                 backdrop-blur-md bg-white/60
                 border border-white/20
                 shadow-sm hover:shadow-lg transition-all duration-300
                 hover:-translate-y-1"
          style={`--ring-color: ${tech.color}`}
        >
          <div class="w-12 h-12 rounded-lg bg-gradient-to-br from-primary-50 to-primary-100
                      flex items-center justify-center
                      group-hover:ring-2 transition-all duration-300"
               style={`--tw-ring-color: ${tech.color}`}>
            <span class="font-display font-bold text-primary-600 text-lg">
              {tech.name.charAt(0)}
            </span>
          </div>
          <span class="font-display font-semibold text-surface-900">
            {tech.name}
          </span>
          <span class="text-xs text-surface-500 uppercase tracking-wider">
            {tech.role}
          </span>
        </div>
      ))}
    </div>
  </div>
</section>
