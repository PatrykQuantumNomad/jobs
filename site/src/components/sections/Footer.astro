---
import GithubIcon from "../../icons/github.svg";

const github = "https://github.com/patrykgolabek/jobs";
const personalSite = "https://patrykgolabek.dev";
const currentYear = new Date().getFullYear();

const techBadges = ["Python", "Astro", "Tailwind CSS", "Playwright", "FastAPI"];
---

{/* Gradient divider line */}
<div class="h-1 bg-gradient-to-r from-primary-500 via-accent-400 to-primary-500"></div>

<footer id="footer" class="py-12 bg-surface-900 dark:bg-surface-950 text-surface-300">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <div>
        <span class="font-display text-lg font-semibold gradient-text">JobFlow</span>
        <p class="mt-1 text-sm text-surface-400">
          From discovery to application in one tool.
        </p>
      </div>
      <div class="flex items-center gap-6">
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-surface-400 hover:text-primary-400 transition-colors"
        >
          <GithubIcon width="20" height="20" fill="currentColor" />
          <span class="sr-only">GitHub</span>
        </a>
        <a
          href={personalSite}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-surface-400 hover:text-primary-400 transition-colors"
        >
          patrykgolabek.dev
        </a>
      </div>
    </div>

    {/* Built with badges */}
    <div class="mt-6 flex flex-wrap gap-2">
      <span class="text-xs text-surface-500">Built with</span>
      {techBadges.map(tech => (
        <span class="text-xs px-2 py-0.5 rounded-full
                     bg-surface-800 text-surface-400 border border-surface-700">
          {tech}
        </span>
      ))}
    </div>

    <div class="mt-8 pt-8 border-t border-surface-700/50 text-center text-sm text-surface-500">
      &copy; {currentYear} Patryk Golabek. All rights reserved.
    </div>
  </div>
</footer>
