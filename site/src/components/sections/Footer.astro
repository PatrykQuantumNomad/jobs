---
import GithubIcon from "../../icons/github.svg";

const github = "https://github.com/PatrykQuantumNomad/jobs";
const personalSite = "https://patrykgolabek.dev";
const currentYear = new Date().getFullYear();

const techBadges = ["Python", "Astro", "Tailwind CSS", "Playwright", "FastAPI"];

const moreProjects = [
  { name: "Networking & Pentesting Tools", href: "https://networking-tools.patrykgolabek.dev/" },
  { name: "Financial Data Extractor", href: "https://financial-data-extractor.patrykgolabek.dev/" },
];
---

{/* Gradient divider line */}
<div class="h-1 bg-gradient-to-r from-primary-500 via-accent-400 to-primary-500"></div>

<footer id="footer" class="py-12 bg-surface-900 text-surface-300">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
      <div>
        <span class="font-display text-lg font-semibold"><span class="text-primary-400">Job</span><span class="text-accent-400">Flow</span></span>
        <p class="mt-1 text-sm text-surface-400">
          From discovery to application in one tool.
        </p>
      </div>
      <div class="flex items-center gap-6">
        <a
          href={github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-surface-400 hover:text-primary-400 transition-colors"
        >
          <GithubIcon width="20" height="20" fill="currentColor" />
          <span class="sr-only">GitHub</span>
        </a>
        <a
          href={personalSite}
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-surface-400 hover:text-primary-400 transition-colors"
        >
          patrykgolabek.dev
        </a>
      </div>
    </div>

    {/* More projects by Patryk */}
    <div class="mt-6 pt-6 border-t border-surface-700/50">
      <p class="text-xs text-surface-500 mb-2">More projects by Patryk</p>
      <div class="flex flex-wrap gap-4">
        {moreProjects.map(project => (
          <a
            href={project.href}
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-surface-400 hover:text-primary-400 transition-colors"
          >
            {project.name}
          </a>
        ))}
      </div>
    </div>

    {/* Built with badges */}
    <div class="mt-6 flex flex-wrap gap-2">
      <span class="text-xs text-surface-500">Built with</span>
      {techBadges.map(tech => (
        <span class="text-xs px-2 py-0.5 rounded-full
                     bg-surface-800 text-surface-400 border border-surface-700">
          {tech}
        </span>
      ))}
    </div>

    <div class="mt-8 pt-8 border-t border-surface-700/50 text-center text-sm text-surface-500">
      &copy; {currentYear} Patryk Golabek. All rights reserved.
    </div>
  </div>
</footer>
