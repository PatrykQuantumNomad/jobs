---
import { Code } from "astro:components";

const THEME = "github-dark-default";

const steps = [
  {
    number: 1,
    title: "Clone the repository",
    code: "git clone https://github.com/patrykgolabek/jobs.git && cd jobs",
    lang: "bash" as const,
  },
  {
    number: 2,
    title: "Install dependencies",
    code: "pip install -r requirements.txt && playwright install chromium",
    lang: "bash" as const,
  },
  {
    number: 3,
    title: "Configure your profile",
    code: `cp config.example.yaml config.yaml
# Edit config.yaml with your search queries, target titles, and tech keywords`,
    lang: "bash" as const,
  },
  {
    number: 4,
    title: "Run the pipeline",
    code: "python orchestrator.py --platforms indeed remoteok",
    lang: "bash" as const,
  },
  {
    number: 5,
    title: "Open the dashboard",
    code: `python -m webapp.app
# Visit http://localhost:8000`,
    lang: "bash" as const,
  },
];
---

<section id="quickstart" class="py-20 bg-white dark:bg-surface-950">
  <div class="max-w-3xl mx-auto px-4">
    <h2 class="font-display text-3xl font-bold text-surface-900 dark:text-surface-50 text-center">
      Quick Start
    </h2>
    <p class="mt-3 text-surface-600 dark:text-surface-300 text-center max-w-2xl mx-auto">
      Up and running in five steps
    </p>

    <div class="mt-12 space-y-8">
      {steps.map((step) => (
        <div>
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 rounded-full bg-primary-600 text-white flex items-center justify-center font-display font-bold text-sm shrink-0">
              {step.number}
            </div>
            <h3 class="font-display font-semibold text-surface-900 dark:text-surface-50">
              {step.title}
            </h3>
          </div>
          <div class="ml-11 mt-2 rounded-lg overflow-hidden">
            <Code code={step.code} lang={step.lang} theme={THEME} />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
