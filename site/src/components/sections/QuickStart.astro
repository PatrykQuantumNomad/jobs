---
import { Code } from "astro:components";

const THEME = "one-dark-pro";

const steps = [
  {
    number: 1,
    title: "Clone the repository",
    code: "git clone https://github.com/patrykgolabek/jobs.git && cd jobs",
    lang: "bash" as const,
  },
  {
    number: 2,
    title: "Install dependencies",
    code: "pip install -r requirements.txt && playwright install chromium",
    lang: "bash" as const,
  },
  {
    number: 3,
    title: "Configure your profile",
    code: `cp config.example.yaml config.yaml
# Edit config.yaml with your search queries, target titles, and tech keywords`,
    lang: "bash" as const,
  },
  {
    number: 4,
    title: "Run the pipeline",
    code: "python orchestrator.py --platforms indeed remoteok",
    lang: "bash" as const,
  },
  {
    number: 5,
    title: "Open the dashboard",
    code: `python -m webapp.app
# Visit http://localhost:8000`,
    lang: "bash" as const,
  },
];
---

<section id="quickstart" data-animate class="py-20 bg-white">
  <div class="max-w-3xl mx-auto px-4">
    <h2 class="font-display text-3xl font-bold text-surface-900 text-center">
      Quick Start
    </h2>
    <p class="mt-3 text-surface-600 text-center max-w-2xl mx-auto">
      Up and running in five steps
    </p>

    <div class="mt-12 relative">
      {/* Dashed connecting line */}
      <div class="absolute left-4 top-6 bottom-6 w-px border-l-2 border-dashed border-primary-200 hidden sm:block"></div>

      <div class="space-y-8">
        {steps.map((step) => (
          <div class="relative">
            <div class="flex items-center gap-3">
              <div class="relative z-10 w-8 h-8 rounded-full bg-gradient-to-br from-primary-400 to-primary-600
                          text-white flex items-center justify-center font-display font-bold text-sm shrink-0
                          shadow-md shadow-primary-600/20">
                {step.number}
              </div>
              <h3 class="font-display font-semibold text-surface-900">
                {step.title}
              </h3>
            </div>
            <div class="ml-11 mt-2 rounded-lg overflow-hidden relative group">
              <button
                class="copy-btn absolute top-2 right-2 z-10 px-2 py-1 rounded text-xs
                       bg-surface-700/80 text-surface-300 hover:bg-surface-600 hover:text-white
                       opacity-0 group-hover:opacity-100 transition-opacity duration-200"
                data-code={step.code}
              >
                Copy
              </button>
              <Code code={step.code} lang={step.lang} theme={THEME} />
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<script>
  function initCopyButtons() {
    document.querySelectorAll<HTMLButtonElement>('.copy-btn').forEach(btn => {
      btn.addEventListener('click', async () => {
        const code = btn.dataset.code;
        if (!code) return;
        try {
          await navigator.clipboard.writeText(code);
          btn.textContent = 'Copied!';
          btn.classList.add('bg-primary-600', 'text-white');
          setTimeout(() => {
            btn.textContent = 'Copy';
            btn.classList.remove('bg-primary-600', 'text-white');
          }, 2000);
        } catch {
          btn.textContent = 'Failed';
          setTimeout(() => { btn.textContent = 'Copy'; }, 2000);
        }
      });
    });
  }

  initCopyButtons();
  document.addEventListener('astro:page-load', initCopyButtons);
</script>
