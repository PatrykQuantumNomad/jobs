---
import ArrowRightIcon from "../../icons/arrow-right.svg";

const phases = [
  { step: 1, name: "Setup", description: "Config & credentials" },
  { step: 2, name: "Login", description: "Platform auth" },
  { step: 3, name: "Search", description: "Job discovery" },
  { step: 4, name: "Score", description: "Match scoring" },
  { step: 5, name: "Apply", description: "Application submit" },
];
---

<section id="architecture" class="py-20 bg-white">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="font-display text-3xl font-bold text-surface-900 text-center">
      How It Works
    </h2>
    <p class="mt-3 text-surface-600 text-center max-w-2xl mx-auto">
      A five-phase pipeline from configuration to application
    </p>

    {/* Desktop: horizontal pipeline */}
    <div class="mt-12 hidden md:flex items-start justify-between">
      {phases.map((phase, i) => (
        <>
          <div class="flex-1 flex flex-col items-center text-center">
            <div class="w-14 h-14 rounded-full bg-primary-600 text-white flex items-center justify-center font-display text-lg font-bold">
              {phase.step}
            </div>
            <h3 class="mt-3 font-display font-semibold text-surface-900">
              {phase.name}
            </h3>
            <p class="mt-1 text-sm text-surface-500">
              {phase.description}
            </p>
          </div>
          {i < phases.length - 1 && (
            <div class="flex items-center pt-4 text-primary-300 shrink-0 px-2">
              <ArrowRightIcon width="24" height="24" />
            </div>
          )}
        </>
      ))}
    </div>

    {/* Mobile: vertical stack */}
    <div class="mt-12 md:hidden space-y-6">
      {phases.map((phase) => (
        <div class="flex items-center gap-4">
          <div class="w-10 h-10 rounded-full bg-primary-600 text-white flex items-center justify-center font-display text-sm font-bold shrink-0">
            {phase.step}
          </div>
          <div>
            <h3 class="font-display font-semibold text-surface-900">
              {phase.name}
            </h3>
            <p class="text-sm text-surface-500">
              {phase.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
